<style type="text/css">
	#text {
		position: relative;
		height: 65vh;
		width: 100%;
	}
</style>

<div id="texteditor" class="modal fade" data-backdrop="false">
	<div class="modal-dialog editor-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h4 class="modal-title">Title</h4>
			</div>
			<div class="modal-body">
				<form>
					<input name="id" name="id" class="editid" type="hidden" value="" />
					<!-- <textarea id="text" name="text" class="edittext"></textarea> -->
					<div id="text"></div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default cancelbtn" data-dismiss="modal">
					Cancel</button>
				<button type="button" class="btn btn-primary savebtn">
					Save</button>
			</div>
		</div>
	</div>
</div>


<script src="/Scripts/ace/ace.js" type="text/javascript" charset="utf-8"></script>
<script src="/Scripts/ace/keybinding-emacs.js" type="text/javascript" charset="utf-8"></script>
<script src="/Scripts/ace/mode-csharp.js" type="text/javascript" charset="utf-8"></script>
<script src="/Scripts/ace/theme-tomorrow_night_purple.js" type="text/javascript" charset="utf-8"></script>
<script>
	var texteditor = ace.edit("text");
	var csharpMode = require("ace/mode/csharp").Mode;
	texteditor.setTheme("ace/theme/tomorrow_night_purple");
	texteditor.getSession().setMode(new csharpMode());
	texteditor.getSession().setTabSize(4);
	texteditor.getSession().setUseSoftTabs(false);
	texteditor.setBehavioursEnabled(false);
	texteditor.setKeyboardHandler("ace/keyboard/emacs");
</script>
